{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ToDoX Tasks",
  "type": "object",
  "required": [
    "version",
    "project",
    "tasks"
  ],
  "properties": {
    "version": {
      "type": [
        "integer",
        "string"
      ]
    },
    "project": {
      "type": "string"
    },
    "policy": {
      "type": "object",
      "properties": {
        "pick_rule": {
          "type": "string",
          "enum": [
            "first_by_order",
            "highest_priority_first",
            "fifo"
          ]
        },
        "edit_guard": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "status",
          "priority",
          "order",
          "depends_on"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^T-\\d{3,}$"
          },
          "order": {
            "type": "integer",
            "minimum": 0
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "TODO",
              "IN_PROGRESS",
              "REVIEW",
              "DONE",
              "BLOCKED",
              "FAILED",
              "CANCELLED"
            ]
          },
          "priority": {
            "oneOf": [
              {
                "type": "integer",
                "minimum": 1,
                "maximum": 4
              },
              {
                "type": "string",
                "pattern": "^P[1-4]$"
              }
            ]
          },
          "assignees": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "depends_on": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "pattern": "^T-\\d{3,}$"
            }
          },
          "dod": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}