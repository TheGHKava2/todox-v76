{
  "dockerfilePath": "./backend/Dockerfile",
  "rootDir": "backend",
  "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
  "environmentVariables": {
    "PYTHONUNBUFFERED": "1",
    "DATABASE_URL": "sqlite:///app/data/app.db",
    "CORS_ORIGINS": "http://localhost:3000"
  },
  "healthcheck": {
    "path": "/docs",
    "timeout": 300
  }
}